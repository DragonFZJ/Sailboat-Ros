<?xml version="1.0"?>
<package>
  <name>usv_gazebo</name>
  <version>0.0.0</version>
  <description>The usv_gazebo package</description>

  <!-- One maintainer tag required, multiple allowed, one person per tag -->
  <!-- Example:  -->
  <!-- <maintainer email="jane.doe@example.com">Jane Doe</maintainer> -->
  <maintainer email="bsb@todo.todo">bsb</maintainer>


  <!-- One license tag required, multiple allowed, one license per tag -->
  <!-- Commonly used license strings: -->
  <!--   BSD, MIT, Boost Software License, GPLv2, GPLv3, LGPLv2.1, LGPLv3 -->
  <license>TODO</license>

  <run_depend>gazebo_ros</run_depend>

  <!-- Needed for gazebo_ros_p3d -->
  <run_depend>gazebo_plugins</run_depend>

  <!-- Needed for hector_gazebo_ros_gps / imu -->
  <run_depend>hector_gazebo_plugins</run_depend>

  <build_depend>gazebo_ros</build_depend>
  
  <buildtool_depend>catkin</buildtool_depend>


  <!-- The export tag contains other, unspecified, tags -->
  <export>
    <!-- This tells gazebo to look in the catkin_package path for resources
    Particularly important for the models/pondmap.png file for the lake.world-->
    <gazebo_ros gazebo_model_path="${prefix}:${prefix}/models"/>
    <gazebo_ros gazebo_media_path="${prefix}"/>
  </export>
</package>
